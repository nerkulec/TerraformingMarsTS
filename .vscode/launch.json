    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "launch",
        "name": "Launch Server",
        "program": "${workspaceFolder}/app/app.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/build/app/*.js",
                     "${workspaceFolder}/build/game/*.js"]
        },
        {
        "type": "node",
        "request": "launch",
        "name": "Launch Client",
        "program": "${workspaceFolder}/client/client.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/build/client/*.js"]
        },{
        "type": "node",
        "request": "launch",
        "name": "Launch Test",
        "program": "${workspaceFolder}/app/test.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/build/app/test.js"]
        }
    ]
}